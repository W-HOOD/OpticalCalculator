RewriteEngine On

# 1️⃣ Remove .html from the URL (redirect to extensionless)
RewriteCond %{THE_REQUEST} \s/([^\s]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# 2️⃣ Internally rewrite extensionless URLs to .html files
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# 3️⃣ Allow subfolders to work the same way
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/([^/]+)/?$ $1/$2.html [L]
